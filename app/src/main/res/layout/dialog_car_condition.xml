<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
            android:id="@+id/relative_params"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/car_switch_condition_title"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="سوییچ:"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/car_switch_condition_value"
                android:textColor="@color/red"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                tools:text="بسته"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/catch_thief_title"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="دزدگیر: "
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/car_switch_condition_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="@color/md_green_500"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/car_switch_condition_value"
                android:id="@+id/catch_thief_value"
                android:layout_marginLeft="20dp"
                tools:text="فعال"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/car_battery_condition_title"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_below="@+id/catch_thief_title"
                android:text="باتری خودرو: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/car_battery_condition_value"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/catch_thief_value"
                tools:text="قطع"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/remote_signal_title"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="سیگنال ردیاب: "
                android:layout_below="@+id/car_battery_condition_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                tools:text="قطع"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/car_battery_condition_value"
                android:id="@+id/remote_signal_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/remote_internet_title"
                android:layout_below="@+id/remote_signal_title"
                android:text="درب خودرو: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:id="@+id/remote_internet_value"
                android:layout_below="@+id/remote_signal_title"
                tools:text="فعال"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_below="@+id/remote_internet_title"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/remote_inner_battery_title"
                android:text="باتری داخلی ردیاب:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_below="@+id/remote_internet_title"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                tools:text="100 %"
                android:id="@+id/remote_inner_battery_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/car_condition_update_button"
                android:textColor="@color/white"
                android:background="@drawable/bg_violet_button"
                android:text="بروزرسانی وضعیت خودرو"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/remote_inner_battery_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/car_con_cancel"
                android:textColor="#909090"
                android:background="@drawable/bg_edit_text"
                android:text="بازگشت"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/car_condition_update_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>